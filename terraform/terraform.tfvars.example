# SSL证书监控系统 - Terraform变量示例
# 复制此文件为 terraform.tfvars 并填入实际值

# AWS配置
aws_region = "us-east-1"

# Lambda函数配置
function_name      = "ssl-certificate-monitor"
lambda_timeout     = 180
lambda_memory_size = 256

# 监控配置
domains_to_monitor = [
  "example.com",
  "test.org",
  "mysite.com"
]

# 定时配置
schedule_expression = "rate(30 days)"
# 其他选项:
# schedule_expression = "rate(1 day)"     # 每天
# schedule_expression = "rate(7 days)"    # 每周
# schedule_expression = "cron(0 9 * * ? *)"  # 每天上午9点

# 通知配置
notification_email = "admin@example.com"

# 日志配置
log_level = "INFO"